interface {
    ethernet eth0 {
        address {{ wan_ip}}/24
    }
    ethernet eth1 {
        address {{ lan_ip}}/24
    }
    loopback lo {

    }
}
nat {
    source {
        rule 10 {
            outbound-interface eth0
            source {
                address {{ lan }}
            }
            translation {
                address masquerade
            }
        }
    }
}
protocols {
    static {
        route 0.0.0.0/0 {
            next-hop {{ gateway }}
        }
    }
}
service {
    dns {
        forwarding {
            allow-from {{ lan }}
            listen-address {{ lan_ip }}
            name-server {{ name_server }}
            system
        }
    }
    ssh {
        listen-address 0.0.0.0
    }
}
system {
    config-management {
        commit-revisions 100
    }
    console {
        device tty50 {
            speed 115200
        }
    }
    host-name {{ hostname }}
    login{
        user vyos {
            authentication {
                encrypted-password {{ password_hash}}
                plaintest-password ""
            }
        }
    }
    name-server {{ name_server }}
    ntp {
        server0.pool.ntp.org {
        }
        server1.pool.ntp.org {
        }
        server2.pool.ntp.org {
        }
    }
}